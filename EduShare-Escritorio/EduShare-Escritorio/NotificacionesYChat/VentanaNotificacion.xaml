<Window x:Class="EduShare_Escritorio.NotificacionesYChat.VentanaNotificacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="300" Height="100"
        >
    <Border CornerRadius="10" Background="White" BorderBrush="Black" BorderThickness="2" Padding="10">
        <StackPanel Orientation="Horizontal">
            <Image Source="/vistas/Recursos/Fondos/Notificacion.png"  Width="40" Height="40" Margin="5"/>
            <StackPanel>
                <TextBlock x:Name="TituloTexto" FontWeight="Bold" Foreground="Black" FontSize="13"/>
                <TextBlock x:Name="MensajeTexto" Foreground="Black" FontSize="11"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
