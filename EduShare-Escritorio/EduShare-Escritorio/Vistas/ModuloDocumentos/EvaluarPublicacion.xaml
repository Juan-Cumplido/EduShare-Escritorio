<Page x:Class="EduShare_Escritorio.Vistas.ModuloDocumentos.EvaluarPublicacion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="634" d:DesignWidth="1280">


    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20,30,20,0" VerticalAlignment="Top">
            <TextBlock Text="HILOS" FontSize="30" FontWeight="Bold" Margin="0,10,0,40"/>

            <TextBlock TextWrapping="Wrap" FontFamily="Calibri" FontSize="18">
                Este documento describe los diferentes tipos de hilos, incluyendo hilos de filamentos lisos e hilados, 
                hilos texturizados voluminizados, elásticos y estabilizados, y hilos hilados de fibras ...
            </TextBlock>

            <TextBlock TextWrapping="Wrap" FontSize="15" Margin="0,70,0,0">
                <Run Text="Cargado por "/>
                <Run Text="Juan Eduardo" FontWeight="Bold" Foreground="#007ACC"/>
            </TextBlock>

            <TextBlock TextWrapping="Wrap" FontSize="15" Margin="0,40,0,0">
                <Run Text="Fecha de la publicación"/>
                <Run Text="23/02/2029" FontWeight="Bold" Foreground="#007ACC"/>
            </TextBlock>

            <StackPanel Orientation="Horizontal" Margin="0,50,0,0" HorizontalAlignment="Left" Width="160" Height="57">
                <ToggleButton
                       Visibility="Visible"
                       Cursor="Hand"
                       Width="146"
                       FontFamily="Calibri"
                       FontSize="12"
                       Foreground="#2e2b2b"
                       HorizontalContentAlignment="Right"
                       VerticalContentAlignment="Center"
                       Background="Transparent"
                       BorderThickness="0" Margin="0,0,20,0" Height="45">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="border"
                                 CornerRadius="10"
                                 Background="#f9f8f4"
                                 BorderBrush="Transparent"
                                 BorderThickness="0"
                                 Padding="10" Cursor="Hand" Margin="0,0,-12,0">
                                <StackPanel Orientation="Horizontal" Margin="-10,-10,-10,-5" >
                                    <Image Source="/Vistas/Recursos/Iconos/ListaNegra.png"
                                        Width="35" Height="35" Margin="0,5,0,0"
                                        VerticalAlignment="Center"/>
                                    <TextBlock  Text="Mandar a la lista negra" FontSize="12" FontWeight="Bold"
                                        VerticalAlignment="Center"
                                        Margin="6,10,6,0" Height="22"/>

                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
            </StackPanel>

        </StackPanel>

        <Grid Grid.Column="1" Margin="0,30,300,30">
            <wv2:WebView2 x:Name="PdfWebView" Margin="0,78,0,78" Visibility="Collapsed"/>
        </Grid>

        <Border Background="#16b555" CornerRadius="8" Margin="737,91,53,501" Grid.Column="1">
            <Button x:Name="btn_Guardar" Content="Aceptar publicación" FontSize="20" FontFamily="Calibri" 
                    Background="Transparent" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Cursor="Hand"  Margin="0,-4,0,-6">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="22"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent" CornerRadius="15" Padding="10" Width="190" Height="NaN" Margin="0,0,0,6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Border>

        <Label Content="Rechazar publicación" FontWeight="Bold" FontSize="20" FontFamily="Calibri" Cursor="Hand" Margin="740,178,50,422" MouseDown="MostrarPantallaPrincipal" Grid.Column="1"/>


    </Grid>



</Page>